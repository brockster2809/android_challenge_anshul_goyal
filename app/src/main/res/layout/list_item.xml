<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/row_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/row_tv_airline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="Air India"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3">

            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/row_tv_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:text="DEL"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_tv_departure_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/row_tv_origin"
                android:text="5:30"
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/row_tv_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/row_tv_departure_time"
                android:layout_marginTop="12dp"
                android:minWidth="40dp"
                android:text="BOM"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_tv_arrival_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/row_tv_destination"
                android:text="5:30"
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/row_linlay_fares"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/row_item_layout"
        android:layout_marginTop="4dp"
        android:background="@android:color/holo_blue_light" />
</RelativeLayout>